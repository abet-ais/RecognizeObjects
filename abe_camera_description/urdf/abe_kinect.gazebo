<?xml version="1.0"?>
<robot>
  <!-- ros_control plugin -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/abe_kinect</robotNamespace>
      <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
    </plugin>
  </gazebo>

  <gazebo reference="mesh_model_link">
  </gazebo>

  <!-- depth_camera_link -->
  <gazebo reference="camera_depth_frame">
    <mu1>0.4</mu1>
    <mu2>0.4</mu2>
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- depth_camera_link -->
  <gazebo reference="camera_depth_frame">
    <sensor type="depth" name="depth_camera1">
      <always_on>true</always_on>
      <update_rate>20.0</update_rate>
      <visualize>true</visualize>             
      <camera>
        <horizontal_fov>${60.0*PI/180.0}</horizontal_fov>  
        <image>
          <!-- <width>3840</width> -->
          <!-- <height>2160</height> -->
          <!-- <width>1280</width> -->
          <!-- <height>720</height> -->
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <depth_camera>

        </depth_camera>
        <clip>
          <near>0.05</near>
          <far>8.0</far>
        </clip>
      </camera>
      <plugin name="kinect_camera_controller" filename="libgazebo_ros_openni_kinect.so">
        <cameraName>camera</cameraName>
        <alwaysOn>true</alwaysOn>
        <updateRate>10</updateRate>
        <imageTopicName>rgb/image_raw_gazebo</imageTopicName>
        <depthImageTopicName>depth/image_raw_gazebo</depthImageTopicName>
        <pointCloudTopicName>depth/points_gazebo</pointCloudTopicName>
        <cameraInfoTopicName>rgb/camera_info_gazebo</cameraInfoTopicName>
        <depthImageCameraInfoTopicName>depth/camera_info_gazebo</depthImageCameraInfoTopicName>
        <frameName>camera_depth_frame</frameName>
        <baseline>0.1</baseline>
        <distortion_k1>0.0</distortion_k1>
        <distortion_k2>0.0</distortion_k2>
        <distortion_k3>0.0</distortion_k3>
        <distortion_t1>0.0</distortion_t1>
        <distortion_t2>0.0</distortion_t2>
        <pointCloudCutoff>0.4</pointCloudCutoff>
      </plugin>
    </sensor>
  </gazebo>
</robot>
